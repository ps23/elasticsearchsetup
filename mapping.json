  {
    "settings":{
      "number_of_shards":1,
      "number_of_replicas":0,
      "index" : {
        "analysis" : {
          "analyzer" : {
            "custom_english" : {
              "tokenizer" : "standard",
              "filter" : [
              "english_possessive_stemmer",
              "lowercase",
              "english_stop",
              "english_stemmer"]
            },
            "shingles" : {
              "tokenizer" : "standard",
              "filter" : [
              "asciifolding",
              "english_possessive_stemmer",
              "lowercase",
              "english_stop",
              "english_stemmer",
              "shingles",
              "trim"]
            },
            "synonyms" : {
              "tokenizer" : "standard",
              "filter" : [
              "english_possessive_stemmer",
              "lowercase",
              "synonym",
              "english_stop",
              "english_stemmer"]
            },
            "autocomplete": {
              "type":      "custom",
              "tokenizer": "standard",
              "filter": [
              "lowercase",
              "autocomplete_filter"
              ]
            }
          },
          "filter" : {
            "synonym" : {
              "type": "synonym",
              "format": "wordnet",
              "tokenizer": "keyword",
              "synonyms_path": "analysis/wn_s.pl"
            },
            "english_stop": {
              "type":       "stop",
              "stopwords":  "_english_"
            },
            "english_keywords": {
              "type":       "keyword_marker",
              "keywords":   ["example"]
            },
            "english_stemmer": {
              "type":       "stemmer",
              "language":   "english"
            },
            "english_possessive_stemmer": {
              "type":       "stemmer",
              "language":   "possessive_english"
            },
            "shingles": {
              "type": "shingle",
              "max_shingle_size": 2,
              "min_shingle_size": 2,
              "token_separator": " ",
              "output_unigrams": "true",
              "filler_token":""
            },
            "autocomplete_filter": {
              "type":     "edge_ngram",
              "min_gram": 1,
              "max_gram": 20
            }
          }
        }
      }
    },
    "mappings":{
      "doc":{
        "properties":{
          "mo_notes":{
            "type":"text",
            "analyzer": "simple",
            "fields": {
              "english": {
                "type": "text",
                "analyzer": "custom_english"
              },
              "synonyms": {
                "type": "text",
                "analyzer": "synonyms"
              },
              "shingles": {
                "type": "text",
                "analyzer": "shingles"
              },
              "autocomplete": {
                "type": "text",
                "analyzer": "autocomplete",
                "search_analyzer": "standard"
              },
              "raw": {
                "type": "keyword"
              }
            }
          },
          "extractions":{
            "type":"nested",
            "properties": {
              "term": {
                "type":"keyword"
              }
            }
          }
        }
      }
    }
  }
